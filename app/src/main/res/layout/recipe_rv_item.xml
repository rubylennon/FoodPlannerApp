<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_shade_3" >

        <ImageView
            android:id="@+id/idTVRecipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/idTVRecipeName"
            android:layout_toLeftOf="@id/idTVCookingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:singleLine="true"
            android:textColor="@color/blue_shade_2"
            android:textStyle="bold"
            android:layout_below="@id/idTVRecipe"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVCookingTime"
            android:layout_below="@id/idTVRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooking Time"
            android:singleLine="true"
            android:textColor="@color/blue_shade_2"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>